{
	"name": "xavivars/xv-random-quotes",
	"description": "WordPress plugin that displays and rotates quotes anywhere on your blog",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Xavi Ivars",
			"email": "xavi@ivars.me"
		}
	],
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"yoast/phpunit-polyfills": "^1.0",
		"php-stubs/wordpress-stubs": "^6.0",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0"
	},
	"autoload": {
		"psr-4": {
			"XVRandomQuotes\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"XVRandomQuotes\\Tests\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"test": "phpunit",
		"test:coverage": "phpunit --coverage-html coverage",
		"phpcs": "phpcs --standard=WordPress src/ xv-random-quotes.php",
		"phpcbf": "phpcbf --standard=WordPress src/ xv-random-quotes.php"
	}
}
